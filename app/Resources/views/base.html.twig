            <link rel="stylesheet" href="{{ asset('bundles/api/css/ngGallery.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/api/css/ngActivityIndicator.css') }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
            <script type="text/javascript">
                var currentUrl = true;
            </script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
                <!-- jQuery -->
            <script src="{{ asset('bundles/api/js/jquery.js') }}"></script>
                <!-- Bootstrap Core JavaScript -->
            <script src="{{ asset('bundles/api/js/bootstrap.min.js') }}"></script>
