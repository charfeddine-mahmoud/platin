            <script src="{{ asset('bundles/api/js/jquery.backstretch.min.js') }}"></script>
            <script src="{{ asset('bundles/api/js/scripts.js') }}"></script>
            
            <script src="{{ asset('bundles/api/js/angular-flash.js') }}"></script>
            <script src="{{ asset('bundles/api/js/ngActivityIndicator.js') }}"></script>
            <script src="{{ asset('bundles/api/js/audiodisplay.js') }}"></script>
            <script src="{{ asset('bundles/api/js/RecordRTC.js') }}"></script>
            <script src="{{ asset('bundles/api/js/ng-file-upload.js') }}"></script>
            <script src="{{ asset('bundles/api/js/ui-bootstrap-tpls.js') }}"></script>

            <script src="{{ asset('bundles/api/js/controllers.js') }}"></script>
        {% block javascripts %}{% endblock %}
