<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <base href="/">
        <title>
            {% block title %}Platin{% endblock %}
        </title>

        <link rel="shortcut icon" href="{{ asset('bundles/api/images/favicon.png') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/api/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/api/css/heroic-features.css') }}">
            <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
            <link rel="stylesheet" href="{{ asset('bundles/api/font-awesome/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/api/css/form-elements.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/api/css/style.css') }}">
